@using MyRoutine.Models.Enums
@model MyRoutine.Models.Record
@{
	ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>
<form method="post">
	<div>
		<label asp-for="Description">Descriçao</label>
		<input asp-for="Description" />
	</div>
	<div>
		<label asp-for="Date">Data da compra</label>
		<input asp-for="Date" type="date" />
	</div>
	<div>
		<label asp-for="Value">Valor</label>
		<input asp-for="Value" type="number" step="0.01" />
	</div>
	<div>
		<label asp-for="Type">Tipo</label>
		<select asp-for="Type" asp-items="Html.GetEnumSelectList<TypeRecord>()">
    <option value="">Selecione</option>
</select>
	</div>
	<div>
		<button type="submit">Adicionar</button>
	</div>
	
</form>

