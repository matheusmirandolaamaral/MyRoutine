@model IEnumerable<MyRoutine.Models.ViewModels.DietIndexViewModel>

@{
	ViewData["Title"] = "Index";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1 class="text-primary">Minhas dietas</h1>
		<a asp-action="Create" class="btn btn-success">+ Nova dieta</a>
	</div>
	<div class="row">
		@foreach(var diet in Model)
		{
			<div class="col-12 col-md-6 mb-4">
				<div class="card shadow-sm h-100">
					<div class="card-body mb-1">
						<h1 class="card-text text-primary">@diet.Diet.Name</h1>
						<p class="card-text mb-1">
							<strong>Início:</strong>
							@diet.Diet.DateInitial.ToShortDateString()
						</p>
						<p class="card-text mb-1">
							<strong>Início:</strong>
							@diet.Diet.DateFinal?.ToShortDateString()
						</p>
						<span class="badge bg-success mt-2">
							Total calorias: @diet.TotalCalories kcal
						</span>
					</div>
					<div class="card-footer d-flex justify-content-between">
						<a asp-action="Details" asp-route-id="@diet.Diet.Id" class="btn btn-sm btn-outline-primary">
							Ver refeição
						</a>
						<a asp-action="Edit" asp-route-id="@diet.Diet.Id" class="btn btn-sm btn-outline-secondary">
							Editar
						</a>
						<a asp-action="Delete" asp-route-id="@diet.Diet.Id" class="btn btn-sm btn-outline-danger">
							Excluir
						</a>
					</div>
				</div>
			</div>
		}
	</div>
	@if (!Model.Any())
	{
		<div class="alert alert-info text-center">
			Não há dietas cadastradas
		</div>
	}


</div>
